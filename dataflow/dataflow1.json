{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"name": "SourceBlobStream"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AzureSqlTable6",
						"type": "DatasetReference"
					},
					"name": "ValidSinkOutput"
				},
				{
					"dataset": {
						"referenceName": "AzureSqlTable7",
						"type": "DatasetReference"
					},
					"name": "InvalidSinkOutput"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "split1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          SalesDate as date 'MM-dd-yyyy',",
				"          SalesMan as string,",
				"          Item as string,",
				"          Units as integer,",
				"          Unit_price as double '000,000,000.000',",
				"          Sale_amt as double '000,000,000.000'",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false) ~> SourceBlobStream",
				"SourceBlobStream derive(validstream = iif(Units <= 0, 'Invalid Units',   iif(Unit_price < 0, 'Negative Price',     iif(isNull(SalesMan), 'Missing SalesMan',       iif(isNull(SalesDate), 'Missing SalesDate',         iif(isNull(Item), 'Missing Item', 'Unknown Error')))))) ~> derivedColumn1",
				"derivedColumn1 split(Units > 0 && toDecimal(Unit_price) >= 0.0 && toDecimal(Sale_amt) >= 0.0 &&!isNull(SalesMan) &&!isNull(SalesDate) &&!isNull(Item),",
				"     disjoint: false) ~> split1@(ValidStream, InvalidStream)",
				"split1@ValidStream sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          SalesDate as date,",
				"          SalesMan as string,",
				"          Item as string,",
				"          Units as integer,",
				"          Unit_price as decimal(10,2),",
				"          Sale_amt as decimal(10,2)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> ValidSinkOutput",
				"split1@InvalidStream sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          SalesDate as date,",
				"          SalesMan as string,",
				"          Item as string,",
				"          Units as integer,",
				"          Unit_price as decimal(10,2),",
				"          Sale_amt as decimal(10,2)",
				"     ),",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> InvalidSinkOutput"
			]
		}
	}
}